<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_won"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/whoPicked_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/child_name_String"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/flipResult_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/result_String"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/dateTimeFlip_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/Date_Result_String"
            android:textSize="15sp"
            android:textStyle="bold"
            />

    </LinearLayout>
</LinearLayout>