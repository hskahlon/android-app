<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinFlipActivity">

    <ImageView
        android:id="@+id/image_coin"
        android:layout_width="236dp"
        android:layout_height="225dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/flipcoins"
        android:src="@drawable/ic_tails"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />

    <Button
        android:id="@+id/button_flipBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/flipBtnText"
        android:text="@string/flipBtnText"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toBottomOf="@+id/button_priorRecords" />

    <TextView
        android:id="@+id/text_coinFlipResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="#512DA8"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toTopOf="@+id/guideline9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHeadsTails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent=".50"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_selectHeads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="1dp"
        android:text="@string/headsText"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineHeadsTails"
        app:layout_constraintTop_toBottomOf="@+id/image_coin" />

    <Button
        android:id="@+id/button_priorRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="1dp"
        android:text="@string/tailsText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guidelineHeadsTails"
        app:layout_constraintTop_toBottomOf="@+id/image_coin" />

    <TextView
        android:id="@+id/text_resultWinOrLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftCentringGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightCentringGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <TextView
        android:id="@+id/text_userToChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/userToChoose_String"
        android:textAlignment="center"

        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toBottomOf="@id/button_flipBtn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <Button
        android:id="@+id/button_changeChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="@string/choose_who_picks_String"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toBottomOf="@+id/text_userToChoose"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nobodyPicks_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/selectedChild"
        android:text="@string/nobody_picks_String"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        app:layout_constraintEnd_toStartOf="@+id/rightCentringGuideline"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/leftCentringGuideline"
        app:layout_constraintTop_toBottomOf="@+id/text_userToChoose"
        app:layout_constraintVertical_bias="0.6"
     />


</androidx.constraintlayout.widget.ConstraintLayout>